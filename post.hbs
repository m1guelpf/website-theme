{{!< default}}

	{{> header }}
{{#post}}
    <div class="background-transition">
        <header class="max-w-4xl lg:mx-auto mt-4 mx-6 z-20 background-transition mb-5 sm:mb-10">
			<h1 class="text-3xl sm:text-6xl font-semibold text-sepia-900 font-main text-transition">{{ title }}</h1>
			<span class="uppercase text-sepia-300 font-main">{{ date format="MMMM DD, YYYY" }} &mdash; {{ reading_time }}</span>
        </header>
    </div>
    <div class="md:max-w-4xl mx-6 lg:mx-auto">
        <article id="article" class="animation animation-fadeInUp animation-delay-4" data-article>
            {{content}}
        </article>
    </div>
    <div class="mt-10 shadow-md bg-white px-4 py-4 border-sepia-300 rounded-lg max-w-3xl lg:mx-auto mx-6 text-center flex flex-col items-center">
        <div class="flex flex-col md:flex-row items-center justify-between w-full">
            <p class="mb-4 md:mb-0">Enjoyed the article? Consider sharing it on Twitter so others can enjoy it too :)</p>
            <a class="twitter-btn" href="https://twitter.com/intent/tweet/?text={{ encode title }}&url={{ url absolute="true" }}&via=m1guelpf" target="_blank" rel="noopener" aria-label="Share on Twitter">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M23.44 4.83c-.8.37-1.5.38-2.22.02.93-.56.98-.96 1.32-2.02-.88.52-1.86.9-2.9 1.1-.82-.88-2-1.43-3.3-1.43-2.5 0-4.55 2.04-4.55 4.54 0 .36.03.7.1 1.04-3.77-.2-7.12-2-9.36-4.75-.4.67-.6 1.45-.6 2.3 0 1.56.8 2.95 2 3.77-.74-.03-1.44-.23-2.05-.57v.06c0 2.2 1.56 4.03 3.64 4.44-.67.2-1.37.2-2.06.08.58 1.8 2.26 3.12 4.25 3.16C5.78 18.1 3.37 18.74 1 18.46c2 1.3 4.4 2.04 6.97 2.04 8.35 0 12.92-6.92 12.92-12.93 0-.2 0-.4-.02-.6.9-.63 1.96-1.22 2.56-2.14z" />
                </svg>
                <span>Share on Twitter</span>
            </a>
        </div>
        <div class="border-b-2 border-sepia-500 w-full my-4"></div>
        <div class="flex flex-col md:flex-row md:items-center justify-between w-full">
            <p class="mb-4 md:mb-0 text-left flex-1">Receive project updates, article drafts &amp; thoughts on your inbox every saturday.</p>
            <a href="{{ @site.url }}/newsletter" class="rounded-full bg-gradient text-white py-2 px-6 font-semibold focus:outline-none focus:shadow-outline hover:shadow-md w-full md:w-auto" style="transition: color 1s ease-in;" data-ignore-link-styling>Subscribe <span class="ml-1">&rarr;</span></a>
        </div>
    </div>

    <div id="commento"></div>

    <div class="mt-10 max-w-3xl lg:mx-auto mx-6 flex flex-col md:flex-row items-center justify-between md:w-auto">
        {{#next_post in="primary_author" }}
            <a href="{{ url }}" class="group shadow-md bg-white hover:bg-gradient px-4 py-4 border-sepia-300 rounded-lg mb-4 md:mb-0 w-full md:w-auto">
                <div class="text-sm text-sepia-300 uppercase group-hover:hidden"><span class="md:hidden">&larr;</span> next article</div>
                <div class="text-sm text-sepia-100 uppercase hidden group-hover:block">{{ date format="MMMM DD, YYYY" }} &mdash; {{ reading_time }}</div>
                <div class="group-hover:text-sepia-300">{{ title }}</div>
            </a>
        {{/next_post}}
        
        {{#prev_post in="primary_author"}}
            <a href="{{ url }}" class="group shadow-md bg-white hover:bg-gradient px-4 py-4 border-sepia-300 rounded-lg w-full md:w-auto">
                <div class="text-sm text-sepia-300 uppercase md:text-right group-hover:hidden">previous article <span class="md:hidden">&rarr;</span></div>
                <div class="text-sm text-sepia-100 uppercase md:text-right hidden group-hover:block">{{ date format="MMMM DD, YYYY" }} &mdash; {{ reading_time }}</div>
                <div class="group-hover:text-sepia-300">{{ title }}</div>
            </a>
        {{/prev_post}}
    </div>

    <script defer src="https://comments.m1guelpf.me/js/commento.js" data-no-fonts="true"></script>
{{/post}}
