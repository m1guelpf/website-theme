{{!< default}}

{{#post}}
    <div class="bg-white dark:bg-sepia-500">
        <div class="pt-6 max-w-4xl lg:mx-auto mx-6">
            <nav class="flex items-center justify-between pb-6">
                <div class="flex-1 uppercase text-sm font-medium tracking-px text-center md:text-left">
                    <p>Miguel Piedrafita &mdash; 17-&#65279;year-&#65279;old&nbsp;<span
                            class="inline md:hidden">indie&nbsp;</span>maker</p>
                </div>
                <div class="hidden md:block">
                    {{{ navigation }}}
                </div>
            </nav>
        </div>
    </div>
    <div class="bg-white dark:bg-sepia-500 md:bg-transparent background-transition">
        <header class="max-w-4xl md:max-w-full mx-6 md:mx-0 relative z-20 flex items-center justify-around flex-col-reverse md:bg-white md:dark:bg-sepia-500 md:flex-row md:rounded-br-huge background-transition">
            <div id="blobbed" class="my-4 max-w-sm">
                <img src="{{ img_url feature_image }}" class="rounded flex shadow" alt="{{ title }}">
            </div>
            <div class="max-w-lg mx-auto md:mx-0 flex flex-col justify-center z-20">
                <div class="flex items-center">
                {{#primary_tag}}
                    <a href="{{url}}" title="{{name}}" class="py-1 px-4 shadow no-underline rounded-full font-sans font-semibold text-sm focus:outline-none focus:shadow-outline mr-2 hover:shadow-md dark:border-2 dark:border-sepia-900 border-width-transition">{{name}}</a>
                {{/primary_tag}}
                </div>
                <h1 class="text-5xl font-semibold text-center md:text-left" style="transition: none;">{{ title }}</h1>
                <p class="">published <time datetime="{{date format="YYYY-MM-DD"}}">{{date timeago="true"}}</time> by <a href="https://miguelpiedrafita.com" class="font-semibold hover:text-blue-500" target="_blank">{{authors separator=" | " autolink="false"}}</a></p>
                <div class="mt-4 flex items-center">
                    <svg class="w-5 h-5 mr-1 fill-current" role="img" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
